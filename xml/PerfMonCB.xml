<!-- Source: https://technet.microsoft.com/en-us/library/mt729067(v=ws.11).aspx -->
<perfcounters>
	<!-- The total number of failed connections since the service started. -->
	<perfcounter>
		<category>Remote Desktop Connection Broker Counterset</category>
		<name>Failed Connections</name>
		<instance>none</instance>
		<friendlyname>FailedConnections</friendlyname>
		<units>none</units>
		<warning>10</warning>
		<critical>1000</critical>
		<min>none</min>
		<max>none</max>
	</perfcounter>
	<!-- The total number of pending requests to be dispatched to the Connection Broker database. -->
	<perfcounter>
		<category>Remote Desktop Database Counterset</category>
		<name>Waiting contexts</name>
		<instance>TSSDIS</instance>
		<friendlyname>WaitingContexts</friendlyname>
		<units>none</units>
		<warning>1</warning>
		<critical>10</critical>
		<min>none</min>
		<max>none</max>
	</perfcounter>
	<!-- The average time (in milliseconds) taken to complete the stored procedures execution. 
	Averaged at 5 second intervals. -->
	<perfcounter>
		<category>Remote Desktop Database Counterset</category>
		<name>Database execution time</name>
		<instance>TSSDIS</instance>
		<friendlyname>DatabaseExecutionTime</friendlyname>
		<units>ms</units>
		<warning>30</warning>
		<critical>60</critical>
		<min>none</min>
		<max>none</max>
	</perfcounter>
	<!-- The average wait time (in milliseconds) for pending requests to be dispatched to the 
	connection broker database. Averaged at 5 second intervals. -->
	<perfcounter>
		<category>Remote Desktop Database Counterset</category>
		<name>Database wait time</name>
		<instance>TSSDIS</instance>
		<friendlyname>DatabaseWaitTime</friendlyname>
		<units>ms</units>
		<warning>5</warning>
		<critical>10</critical>
		<min>none</min>
		<max>none</max>
	</perfcounter>
	<perfcounter>
		<category>MSSQL$MICROSOFT##WID:Databases</category>
		<name>Percent Log Used</name>
		<instance>RDCms</instance>
		<friendlyname>PercentLogUsed</friendlyname>
		<units>%</units>
		<warning>85</warning>
		<critical>90</critical>
		<min>0</min>
		<max>100</max>
		<!-- \MSSQL$MICROSOFT##WID:SQL Statistics\Batch Requests/sec 
		Batch Requests/Sec measures the number of batches SQL Server 
		is receiving per second. This counter is a good indicator of how 
		much activity is being processed by your SQL Server box.
		The higher the number, the more queries are being executed 
		on your box. Like many counters, there is no single number 
		that can be used universally to indicate your machine is too busy.
		Todayâ€™s machines are getting more and more powerful all the 
		time and therefore can process more batch requests per second.
		You should review this counter over time to determine a baseline 
		number for your environment. -->
	</perfcounter>
		<perfcounter>
		<category>MSSQL$MICROSOFT##WID:SQL Statistics</category>
		<name>Batch Request/sec</name>
		<instance>RDCms</instance>
		<friendlyname>PercentLogUsed</friendlyname>
		<units>%</units>
		<warning>85</warning>
		<critical>90</critical>
		<min>0</min>
		<max>100</max>
	</perfcounter>
</perfcounters>